use_frameworks!

target 'iOS' do
    platform :ios, '10.0'
    use_frameworks!

    pod 'SwiftyUserDefaults'
    pod 'ProcedureKit', :path => 'submodules/ProcedureKit'
    pod 'ProcedureKit/Network', :path => 'submodules/ProcedureKit'
    pod 'RealmSwift'
end

target 'macOS' do
    platform :osx, '10.10'
    use_frameworks!
    
    pod 'SwiftyUserDefaults'
    pod 'ProcedureKit', :path => 'submodules/ProcedureKit'
    pod 'RealmSwift'
end

target 'WikiMed' do
    platform :ios, '10.0'
    use_frameworks!
    
    pod 'ProcedureKit', :path => 'submodules/ProcedureKit'
end
